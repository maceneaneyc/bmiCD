@page
@model BmiModel

@{
    ViewData["Title"] = "BMI calculator";
}

<h2>BMI Calculator</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BMI.WeightStones" class="control-label"></label>
                <input asp-for="BMI.WeightStones" class="form-control" />
                <span asp-validation-for="BMI.WeightStones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BMI.WeightPounds" class="control-label"></label>
                <input asp-for="BMI.WeightPounds" class="form-control" />
                <span asp-validation-for="BMI.WeightPounds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BMI.HeightFeet" class="control-label"></label>
                <input asp-for="BMI.HeightFeet" class="form-control" />
                <span asp-validation-for="BMI.HeightFeet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BMI.HeightInches" class="control-label"></label>
                <input asp-for="BMI.HeightInches" class="form-control" />
                <span asp-validation-for="BMI.HeightInches" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-default" />
            </div>
            @if (Request.Method == "POST")
            {
                <div id="BMIValue">
                    @Html.DisplayNameFor(m => m.BMI.BMIValue) @Html.DisplayFor(m => m.BMI.BMIValue)
                </div>
                <div id="BMICategory">
                    @Html.DisplayNameFor(m => m.BMI.BMICategory) @Html.DisplayFor(m => m.BMI.BMICategory)
                </div>
                <div id="BMIWeightMetric">
                    @Html.DisplayNameFor(m => m.BMI.BMIWeightMetric) @Html.DisplayFor(m => m.BMI.BMIWeightMetric)
                </div>
                <div id="BMIHeightMetric">
                    @Html.DisplayNameFor(m => m.BMI.BMIHeightMetric) @Html.DisplayFor(m => m.BMI.BMIHeightMetric)
                </div>
            }
        </form>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

